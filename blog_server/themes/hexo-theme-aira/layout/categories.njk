{% extends "_layout.njk" %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ url_for("css/page.css") }}">
<link rel="stylesheet" type="text/css" href="{{ url_for("css/post.css") }}">
{% endblock %}

{% block title %}{{ __(page.title) }} | {{ config.title }}{% if config.subtitle %} - {{ config.subtitle }}{% endif %}{% endblock %}

{% block content %}
<div id="categories" class="categories page">
  <article class="article post card{% if theme.animate %} animate{% endif %}">
    <header class="post-header">
      <h1 class="post-title" itemprop="name headline">{{ __(page.title) }}</h1>
    </header>
    <main class="post-main">
      <h2 class="page-counter">
        {% if site.categories.length > 1 %}
        {{ _p("categorycount.more", site.categories.length) }}
        {% elif site.categories.length === 1 %}
        {{ _p("categorycount.one", site.categories.length) }}
        {% else %}
        {{ __("categorycount.none") }}
        {% endif %}
      </h2>
      <div class="categories-list">
        {{ list_categories() }}
      </div>
    </main>
    <footer class="post-footer"></footer>
  </article>
</div>
{% endblock %}
